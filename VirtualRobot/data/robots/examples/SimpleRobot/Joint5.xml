<?xml version="1.0" encoding="UTF-8" ?>

<Robot Type="Simple3DoFRobot" RootNode="Joint1">

	<RobotNode name="Joint1">
		<Joint type="fixed">
            <postjointtransform>
                <transform>
                    <translation x="0" y="0" z="3000"/>
                </transfrom>
            </postjointtransform>
        </Joint>
		<Visualization enable="true">
			 <File type="inventor">box.iv</File>
			 <UseAsCollisionModel/>
		</Visualization>
		<Physics>
            <CoM location="VisualizationBBoxCenter"/>
            <Mass value="1" units="kg" />
        </Physics>
		<Child name="Joint2"/>
	</RobotNode>
	
	<!--RobotNode name="Joint2a">
        <Child name="Joint2b"/>
	</RobotNode-->

	<RobotNode name="Joint2">
	    <Joint type="revolute">
  		    <!--prejointtransform>
                <transform>
                    <translation x="3000" y="0" z="0"/>
                </transfrom>
            </prejointtransform-->
            <prejointtransform>
                <transform>
                    <rollpitchyaw roll="0" pitch="90" yaw="0" unitsAngle="degree"/>
                </transfrom>
            </prejointtransform>
		    <axis x="1" y="0" z="0"/>
		     <postjointtransform>
                <transform>
                    <translation x="0" y="0" z="3000"/>
                </transform>
            </postjointtransform>
		    <Limits unit="degree" lo="-90" hi="90"/>
		</Joint>
		<Visualization enable="true">
			 <File type="inventor">box.iv</File>
			 <UseAsCollisionModel/>
		</Visualization>
		<Physics>
            <CoM location="VisualizationBBoxCenter"/>
            <Mass value="1" units="kg" />
        </Physics>
		
        <Child name="Joint3"/>
	</RobotNode>

	<RobotNode name="Joint3">
		<Visualization enable="true">
			 <File type="inventor">sphere.iv</File>
			 <UseAsCollisionModel/>
		</Visualization>
		<Physics>
            <CoM location="VisualizationBBoxCenter"/>
            <Mass value="1" units="kg" />
        </Physics>
	</RobotNode>

</Robot>
